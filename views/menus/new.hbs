<h2 class="mb-2">Create new Menu</h2>
<form action="/menus" method="POST">

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-tag fa-fw"></i></span>
    <input type="text" name="title" value="{{ menu.title }}" class="form-control {{#if errors.title }}is-invalid{{/if}}" placeholder="Enter menu title..." />
    {{#if errors.title }}<div class="invalid-feedback">{{ errors.title }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-edit fa-fw"></i></span>
    <textarea class="form-control {{#if errors.description }}is-invalid{{/if}}" name="description" aria-label="Menu description">{{ menu.description}}</textarea>
    {{#if errors.description }}<div class="invalid-feedback">{{ errors.description }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="text" name="logo" value="{{ menu.logo }}" class="form-control {{#if errors.image }}is-invalid{{/if}}"
      placeholder="Enter menu logo url..." />
    {{#if errors.image }}<div class="invalid-feedback">{{ errors.image }}</div>{{/if}}
  </div>

<div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="text" name="background" value="{{ menu.background }}" class="form-control {{#if errors.image }}is-invalid{{/if}}"
      placeholder="Enter menu nackground url..." />
    {{#if errors.image }}<div class="invalid-feedback">{{ errors.image }}</div>{{/if}}
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>