<div class="d-flex justify-content-center align-items-center full-heigth">
  <div class="container glassmorphism container-new-menu pt-5 pb-5 mt-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12 d-flex justify-content-center align-items-center"> 
        <h1 class="mb-4 create-menu">Details of your account</h1>
      </div> 
      <div class="col-12 d-flex justify-content-center align-items-center"> 
          <h1>Hey!  {{user.name}}</h1>
      </div> 
      <div class="col-12 d-flex justify-content-center align-items-center text-center"> 
          <p>Here is your account information:<br>{{user.email}}</p>
      </div> 
      <div class="col-12 d-flex justify-content-center align-items-center text-center"> 
          <img src="{{user.image}}">
      </div>  
      <div class="col-12 d-flex justify-content-center m-2"> 
          
            <form action="/users/{{user.id}}/edit" method="get">
                      <button type="submit" class="btn btn-primary">Edit your profile picture</button>                  
            </form>
      </div>
      <div class="col-12 d-flex justify-content-center align-items-center">         
            <ul class="p-0">
                <p>This are your restaurants:</p>
                {{#each restaurant as |restaurants|}}
                    <li>{{restaurants.name}}</li>
                {{/each}}
            </ul>
      </div>
    </div>
      
  </div>
</div>


