<div class="full-heigth  d-flex justify-content-center align-items-center text-center">
  <div class="container glassmorphism container-new-restaurant pt-5 pb-5 mt-5 fade-in-1">
    <div class="row d-flex justify-content-center align-items-center m-0">
      <div class="col-12 d-flex justify-content-center align-items-center"> 
        <h1 class="mb-4 create-menu">Create a New Restaurant</h1>
      </div> 
    </div>
    <div class="row justify-content-center m-0">
      <div class="col-12 d-flex justify-content-center align-items-center p-0"> 
        <form action="/restaurants" method="POST" class="col-10"  enctype="multipart/form-data">
                      <div class="input-group mb-3 ">
                        <span class="input-group-text d-flex justify-content-center align-items-center">
                          <i class="fa fa-tag fa-fw"></i>
                          <label for="name">Name</label>
                        </span>
                        <input id="name" type="text" name="name" value="{{ restaurant.name }}" class="form-control {{#if errors.name }}is-invalid{{/if}}" placeholder="Enter the restaurant name..." />
                        {{#if errors.name }}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}

                      </div>

                      <div class="input-group mb-3">
                        <span class="input-group-text d-flex justify-content-center align-items-center">
                          <i class="fa fa-picture-o fa-fw"></i>
                          <label for="logo">Logo</label>
                        </span>
                        <input id="logo" type="file" name="logo" value="{{ restaurant.logo }}" class="form-control {{#if restaurant.logo}}is-invalid{{/if}}"
                          placeholder="Enter your logo..." />
                        {{#if errors.Logo }}<div class="invalid-feedback">{{ errors.logo }}</div>{{/if}}

                        {{!-- <div class="form-check form-switch mx-3">
                            <div class="d-flex justify-content-center align-items-center">
                            <input class="form-check-input" type="checkbox" role="switch" id="delivery" name="delivery"{{#if restaurant.delivery}}checked{{/if}} value="true">
                            <label class="form-check-label mt-3 mx-2" for="delivery">Delivery</label>
                          </div>
                        </div> --}}
                      </div>

                      <div class="input-group mb-3">
                        <span class="input-group-text d-flex justify-content-center align-items-center">
                          <i class="fa fa-list fa-fw"></i>
                          <label for="category">Category</label>
                        </span>

                        <select name="category" id="category" class="form-select">
                          {{#each categoriesRestaurant as |category|}}
                            <option value="{{category}}">{{category}}</option>
                          {{/each}}
                        </select>

                        <span class="input-group-text d-flex justify-content-center align-items-center ">
                          <i class="fa fa-phone fa-fw" aria-hidden="true"></i>
                          <label for="phoneNumber">Number</label> 
                        </span>
                        <input id="phoneNumber" type="tel" name="phoneNumber" value="{{ restaurant.phoneNumber }}" class="form-control {{#if errors.phoneNumber }}is-invalid{{/if}}" placeholder="Write the restaurant phone number..." />
                        {{#if errors.phoneNumber }}<div class="invalid-feedback">{{ errors.phoneNumber }}</div>{{/if}}
                      </div>



                      <div class="input-group mb-3">
                        <span class="input-group-text d-flex justify-content-center align-items-center">
                          <i class="fa fa-map-marker fa-fw"></i>
                          <label for="address">Address</label>
                        </span>
                        <textarea id="address" placeholder="Type your full address here..." class="form-control {{#if errors.address }}is-invalid{{/if}}" name="address" aria-label="Menu address">{{ restaurant.address}}</textarea>
                        {{#if errors.address }}<div class="invalid-feedback">{{ errors.address }}</div>{{/if}}
                      </div>

                      <div class="input-group mb-3">
                        <span class="input-group-text d-flex justify-content-center align-items-center">
                          <i class="fa fa-edit fa-fw"></i>
                          <label for="description">Description</label>
                        </span>
                        <textarea id="description" placeholder="Describe your menu here..." class="form-control {{#if errors.description }}is-invalid{{/if}}" name="description" aria-label="Menu description">{{ restaurant.description}}</textarea>
                        {{#if errors.description }}<div class="invalid-feedback">{{ errors.description }}</div>{{/if}}
                      </div>
                      

                        <label for="allergens" style="primary-color">Services</label>
                        <div class="input-group mb-4 w-100 ">
                          <div class="form-check form-switch  overflow-auto restaurants-list bg-white  w-100">
                              {{#each servicesRestaurant as |services|}}
                                <input class="form-check-input col-12 mt-3 bug" type="checkbox" id="services" name="services"  value="{{services}}"/>
                                <label class="form-check-label mt-2 col-12 text-l" for="{{services}}">{{services}}</label>
                              {{/each}}
                          </div>
                        </div>


                      <hr class="mt-3"/>    
                      <div class="d-grid gap-2 col-12 d-flex justify-content-center align-items-center text-center">
                        <button type="submit" class="btn btn-primary btn-primary">Create Restaurant</button>
                      </div>
        </form>
      </div>
    </div>
  </div>
</div>