<div class="container glassmorphism-no-hover pt-5 pb-5 mt-5">


    <div class="row justify-content-center align-items-center">
        {{#each restaurants as |restaurant|}}

            <div class="col-3 d-flex justify-content-center align-items-center text-center">
                <div class="card mxb-4 pt-3">

                    <div class="row justify-content-center align-items-center text-center position-menu-logo">
                        <div class="position-relative logo-background-circle  d-flex justify-content-center align-items-center text-center">
                        </div> 

                        <div class="position-absolute container-menu-logo d-flex justify-content-center align-items-center text-center">
                            <img src="{{restaurant.logo}}" class="card-img-top menu-logo" alt="...">
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{restaurant.name}}</h5>
                        <p class="card-text">{{restaurant.description}}</p>
                            <a href="menus/{{restaurant.id}}" class="btn btn-primary">See details</a>
                    </div>
                </div> 
            </div>
        {{/each}}
        <hr class="mt-5"/>    
    </div>

    <div class="row ">
        <div class="col-12 d-flex justify-content-center align-items-center text-center">
            <h2><a href="/menus/new" class="btn btn-primary">Create a New Menu</a></h2> 
        </div>
    </div>

</div>