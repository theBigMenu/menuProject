<div class="zoom hero-image" style="background-image:linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{categories.image}})">
        <div class="hero-text">
            <h1 class="text-white animate__animated animate__fadeInUp" style="font-size:50px">{{categories.name}}</h1>
            <p class="text-white animate__animated animate__fadeInUp animate__delay-1s">{{categories.description}}</p>
        </div>
</div>


<div class="d-flex justify-content-center align-items-center animate__animated animate__fadeIn ">
    <div class=" glassmorphism-no-hover pt-5 pb-5 col-12 ">
        <div class="row justify-content-center align-items-center mt-3 mx-0 text-center px-5 ">

            <hr class="text-white">
            
            <div class=" row col-12 d-flex justify-content-center align-items-center text-center h-100 parent">
            {{#each categories.products as |product|}}
                <div class="col-3 d-flex justify-content-center align-items-center text-center card card-body mx-4 my-4 p-0 card-hover  products-card">

                                        <form action="/products/{{product.id}}/delete" class="m-0 p-0" method="post">
                                            <button type="submit" class="close"><strong>X</strong></button>
                                        </form>

                    <div class="card card-body w-100 pt-3 justify-content-center align-items-center text-center">
                        <div class="row justify-content-center align-items-center text-center position-menu-logo">
                                <img src="{{product.image}}" class="card-img-top products-image " alt="...">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-black">{{product.name}} </h5>
                            <h5 class="card-title text-black">{{product.price}}â‚¬</h5>                            
                            <p class="card-text text-black">{{product.description}}</p>
                                <a href="/products/{{product.id}}" class="btn btn-primary">See More</a>
                        </div>
                    </div> 
                        <a href="/products/{{product.id}}/edit"><i class="fa fa-pencil edit" aria-hidden="true"></i></a>
                </div>
            {{/each}}
            </div>
            <hr class="black mt-5"/>    
        </div>

                <div class="row ">
                    <div class="col-12 d-flex justify-content-center align-items-center text-center">
                        <form action="/products/{{categories.id}}/new" method="GET">
                            <button type="submit"  class="btn btn-primary">Create a New Product</button>
                        </form>
                        </div>
                    </div>
                </div>


                
        <div class="mt-5">
            <br>
        </div>
    </div>

</div>


